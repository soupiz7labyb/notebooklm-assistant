{
  "manifest_version": 3,
  "name": "NotebookLM Assistant",
  "version": "2.0.0",
  "description": "Send web pages, videos, files, and text to Google NotebookLM, then export generated outputs and source data",
  "permissions": [
    "identity",
    "sidePanel",
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "cookies",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://accounts.google.com/*",
    "https://lh3.googleusercontent.com/*",
    "https://*.usercontent.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.usercontent.goog/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "NotebookLM Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "oauth2": {
    "client_id": "552997440627-29l752umkhfvkdfhr9qc2vi2ujjftj27.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.js"],
      "matches": []
    }
  ]
}
